<h2><%= t('devise.passwords.change_your_password') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="inputs">
    <%= f.input :password, :label => t('devise.passwords.new_password'), :required => true %>
    <%= f.input :password_confirmation, :label => t('devise.passwords.confirm_new_password'), :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, t('devise.passwords.change_my_password') %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
