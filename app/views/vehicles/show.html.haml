%h1= @vehicle.name
%dl
  - [:color, :engine_volume, :mileage, :transmission, :release_year, :vin].each do |attr|
    %dt= t("activerecord.attributes.vehicle.#{attr}")
    %dd= @vehicle.send(attr)
  %dt= t("activerecord.attributes.user_vehicle.mileage_on_purchase")
  %dd= @vehicle.mileage_on_purchase
  %dt= t("activerecord.attributes.user_vehicle.date_of_purchase")
  %dd= @vehicle.date_of_purchase
